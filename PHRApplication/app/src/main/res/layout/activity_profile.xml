<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C6BA4"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="167dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/introduction"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="105dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="106dp"
        android:gravity="center|top"
        android:lineSpacingExtra="-2sp"
        android:text="John Smith"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/cybersecuri"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="106dp"
        android:gravity="center|top"
        android:lineSpacingExtra="4sp"
        android:text="john.doe@gmail.com"
        android:textAppearance="@style/cybersecuri"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduction" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="355dp"
        android:layout_height="332dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cybersecuri">

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="68dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/base"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="18dp"
                android:src="@tools:sample/avatars"
                app:srcCompat="@drawable/set" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:layout_weight="1"
                android:text="Account Settings"
                android:textColor="#0E1012"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="68dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/base"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="22dp"
                android:src="@tools:sample/avatars"
                app:srcCompat="@drawable/policy" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:layout_weight="1"
                android:text="Privacy Policy"
                android:textColor="#0E1012"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="68dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/base"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="22dp"
                android:src="@tools:sample/avatars"
                app:srcCompat="@drawable/card" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:layout_weight="1"
                android:text="Payment Settings"
                android:textColor="#0E1012"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="68dp"
            android:background="@drawable/base"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="22dp"
                android:src="@tools:sample/avatars"
                app:srcCompat="@drawable/card" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:layout_weight="1"
                android:text="Payment Settings"
                android:textColor="#0E1012"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="131dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/logout"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:text="Log Out"
            android:textColor="#BECADA"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="227dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteX="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>