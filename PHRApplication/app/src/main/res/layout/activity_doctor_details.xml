<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorDetailsActivity">

    <RelativeLayout
        android:id="@+id/rectangle_2"
        android:layout_width="415dp"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#1C6BA4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView28"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="103dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/rectangle_1"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rectangle_1"
        android:backgroundTint="@color/white"
        android:elevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_2">

        <TextView
            android:id="@+id/tv_docName"
            android:layout_width="233dp"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="21dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/tv_docImg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/tv_docImg"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="18dp"
            android:src="@tools:sample/avatars"
            app:srcCompat="@drawable/doctor" />

        <TextView
            android:id="@+id/tv_docRole"
            android:layout_width="193dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_docName"
            android:layout_alignEnd="@+id/tv_docName"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="sans-serif-light"

            android:text=""
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/black" />
    </RelativeLayout>










</androidx.constraintlayout.widget.ConstraintLayout>